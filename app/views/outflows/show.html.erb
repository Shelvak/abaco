<div class="readonly-data">
  <% date = @outflow.bought_at ? l(@outflow.bought_at) : nil %>
  <h2><%= raw [show_outflow_kind(@outflow), date].join(' - ') %></h2>

  <% if @outflow.with_incentive %>
    <h4><%= I18n.t("view.outflows.with_incentive.true") %></h4>
  <% end %>

  <p>
    <strong><%= Outflow.human_attribute_name 'user_id' %></strong>:
    <%= @outflow.user %>
  </p>

  <% if @outflow.bill %>
    <p>
      <strong><%= Outflow.human_attribute_name 'bill'  %></strong>:
      <%= @outflow.bill %>
    </p>
  <% end %>

  <% if @outflow.provider %>
    <p>
      <strong><%= Outflow.human_attribute_name 'provider'  %></strong>:
      <%= @outflow.provider %>
    </p>
  <% end %>

  <p>
    <strong><%= Outflow.human_attribute_name 'amount' %></strong>:
    <%= number_to_currency @outflow.amount %>
  </p>

  <% if @outflow.operator_id %>
    <p>
      <strong><%= Outflow.human_attribute_name 'operator_id' %></strong>:
      <%= @outflow.operator_name %>
    </p>
  <% end %>

  <% if @outflow.file && @outflow.file.try(:file) %>
    <p>
      <strong><%= Outflow.human_attribute_name 'file' %></strong>:
      <%= link_to_file @outflow.file %>
    </p>
  <% end %>

  <% if (start = @outflow.start_shift) || (finish = @outflow.finish_shift) %>
    <p>
      <strong><%= Outflow.human_attribute_name 'start_shift' %></strong>:
      <%= I18n.l(start) if start %>
    </p>
    <p>
      <strong><%= Outflow.human_attribute_name 'finish_shift' %></strong>:
      <%= I18n.l(finish) if finish %>
    </p>
  <% end %>

  <p>
    <strong><%= Outflow.human_attribute_name 'comment' %></strong>:
    <blockquote><%= simple_format @outflow.comment %></blockquote>
  </p>
</div>
<div class="form-actions">
  <%= link_to t('label.edit'), edit_outflow_path(@outflow) if can? :update, @outflow %> |
  <%= link_to t('label.list'), outflows_path %>
  <%= link_to_destroy @outflow if can? :destroy, @outflow %>
</div>
